<div class="author">
    <h1 class="author_heading">Fun Vacations in Indonesia</h1>
    <p class = "author_body">Tips, Tricks, and Travel Inspiration</p>
</div>

<img src="/img/Cover_gunung.jpg" alt=" " class="Cover_gunung" width="981" height="528">

<section class="articles">
    <h2 class="article_heading">Latest Post</h2>
    

    <ul class = "article-ul">
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString() %></span>

            </a>
        </li>
        <% }) %>
    </ul> 

    <!-- Filter Pagination -->

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
      <% } %>
</section>